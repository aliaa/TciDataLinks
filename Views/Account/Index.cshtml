@model IEnumerable<AuthUserX>


@{
    ViewData["Title"] = "مدیریت کاربران";
}

<div>
    <a asp-action="Add" class="btn btn-info">کاربر جدید</a>
</div>

<h1 class="mt-5">مدیریت کاربران</h1>


<div class="row mt-5">
    <div class="col-lg-9">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>@Html.DisplayNameForInnerType((AuthUserX m) => m.FirstName)</th>
                    <th>@Html.DisplayNameForInnerType((AuthUserX m) => m.LastName)</th>
                    <th>@Html.DisplayNameForInnerType((AuthUserX m) => m.IsAdmin)</th>
                    <th>@Html.DisplayNameForInnerType((AuthUserX m) => m.Username)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @if (!user.IsAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@user.Id">ویرایش</a>
                            }
                        </td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@(user.IsAdmin ? "بلی" : "")</td>
                        <td>@user.Username</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
