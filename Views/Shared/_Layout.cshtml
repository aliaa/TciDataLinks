<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - سامانه مدیریت لینکهای ارتباطی مخابرات</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-table/bootstrap-table.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header dir="rtl">
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark bg-dark border-bottom">
            <div class="container-fluid flex-wrap">
                <a class="navbar-brand" asp-area="" asp-controller="Graph" asp-action="Index">سامانه مدیریت لینکهای ارتباطی مخابرات</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex">
                    <ul class="navbar-nav mr-5 w-100 flex-wrap">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Graph" asp-action="Index">گراف شبکه</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Place" asp-action="Index">مکان ها و تجهیزات</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Connection" asp-action="Index">لینک ها</a>
                            </li>
                            @if (User.FindFirst(nameof(Permission)).Value.Contains(nameof(Permission.ManageUsers)))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Index">مدیریت کاربران</a>
                                </li>
                            }
                            @if (User.FindFirst(nameof(Permission)).Value.Contains(nameof(Permission.ViewUserLogs)))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Log">لاگ کاربران</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="ChangePassword">تغییر رمز عبور</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">خروج</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">ورود</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="pt-5">
        <div class="container" dir="rtl">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <div class="toast affix" id="toast" dir="rtl">
        <div class="toast-header">
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
        </div>
        <div class="toast-body" id="toast-body">
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - EATC.ir
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/lib/select2/js/i18n/fa.js"></script>
    <script src="~/lib/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/lib/gojs/go.js"></script>
    <script src="~/lib/ddslick/jquery.ddslick.min.js"></script>
    <script src="~/js/go-init.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
